{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@trip": [
        "trip/src/index.ts"
      ],
      "@trip/*": [
        "trip/src/*"
      ],
      "@todo": [
        "todo/src/index.ts"
      ],
      "@todo/*": [
        "todo/src/*"
      ],
      "@/domain/trip": [
        "trip/src/index.ts"
      ],
      "@/domain/task": [
        "todo/src/index.ts"
      ],
      "@/adapters/*": [
        "trip/src/adapters/*",
        "todo/src/adapters/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
